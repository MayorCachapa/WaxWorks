<h1>List your Wax</h1>

<div class="card p-5 mb-3">
    <%= simple_form_for [@release, @listing] do |f| %>
    <%=f.input "condition", as: :radio_buttons, collection: %w(Excellent Good Fair Damaged) %>
    <%=f.input "sleeve_condition", as: :radio_buttons, collection: %w(Excellent Good Fair Damaged)%>
    <%=f.input "price_cents"%>
    <%=f.input "shipping_fee"%>
    <%=f.input "comments"%>
    <%=f.input "location"%>
    <%= f.input :image, as: :file, label: "Wax Photo"%>
    <%= f.submit class:'btn btn btn-secondary btn-lg btn-dar' %>
    <% end %>
</div>