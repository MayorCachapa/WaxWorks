<div class="first-bar title-bar">
  <div>
    <h4><strong>Top Tracks (5)</strong></h4>
  </div>
</div>
<div class="all-releases">
  <div class="releases">
    <% for artist in @user.top_artists %>
      <% @releases.each do |release| %>
        <% if release.artist == artist %>
        <div class="release-card">
          <div class="album-thumbnail">
            <%= link_to url_for(release) do %>
              <%= image_tag release.url %>
            <% end %>
          </div>
          <div class="album-content">
            <div class="top">
              <div class="album-copy">
                <h4><%= release.title %></h4>
                <p><%= release.artist %></p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
 </div>

